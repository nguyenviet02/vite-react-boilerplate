{
	"name": "vite-react-boilerplate",
	"author": "Nguyen Viet <nguyenviet02.dev@gmail.com>",
	"description": "A production ready, batteries included starter template for Vite + React projects",
	"keywords": [
		"vite",
		"react",
		"boilerplate",
		"starter",
		"template"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/nguyenviet02/vite-react-boilerplate"
	},
	"license": "MIT",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"format": "prettier \"src/**/*.{ts,tsx}\" --write",
		"lint": "eslint --max-warnings 0",
		"lint:fix": "eslint --max-warnings 0 --fix",
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"commitlint": "commitlint --edit",
		"prepare": "husky && husky install"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.0",
		"@tanstack/react-query": "^5.83.0",
		"@tanstack/react-router": "^1.130.0",
		"@tanstack/react-table": "^8.21.3",
		"dayjs": "^1.11.13",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.61.1",
		"zod": "^4.0.10",
		"zustand": "^5.0.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.32.0",
		"@headlessui/react": "^2.2.6",
		"@heroicons/react": "^2.2.0",
		"@hookform/devtools": "^4.4.0",
		"@tailwindcss/vite": "^4.1.11",
		"@tanstack/react-query-devtools": "^5.83.0",
		"@tanstack/react-table-devtools": "^8.21.3",
		"@tanstack/router-devtools": "^1.130.0",
		"@tanstack/router-plugin": "^1.130.0",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/node": "^24.1.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"@vitejs/plugin-react-swc": "^3.11.0",
		"autoprefixer": "^10.4.21",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-unicorn": "^60.0.0",
		"globals": "^16.3.0",
		"husky": "^8.0.0",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.4",
		"prettier": "^3.6.2",
		"prop-types": "^15.8.1",
		"shx": "^0.4.0",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"vite": "7.0.6",
		"vite-plugin-static-copy": "^3.1.1"
	},
	"lint-staged": {
		"*.{js, jsx,ts,tsx}": [
			"pnpm run lint:fix"
		],
		"*.{json,js,ts,jsx,tsx,html}": [
			"pnpm run format"
		]
	}
}
